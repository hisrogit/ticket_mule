<table class="listing" cellspacing="0">
  <tr class="header">
    <th>ชื่อใช้งาน</th>
    <th>ชื่อ - นามสกุล</th>
    <th>อีเมล</th>
    <th>เข้าใช้ระบบเมื่อ</th>
    <th>ยกเลิกใช้ระบบเมื่อ</th>
  </tr>
  <% @users.each do |user| -%>
  <tr class="<%= cycle("list-line-odd", "list-line-even") -%>">
    <td><%= link_to h(user.username), user -%></td>
    <td><%=h user.full_name -%></td>
    <td><%=h user.email -%></td>
    <td><%= to_datetime_th user.last_login_at unless user.last_login_at.nil? -%></td>
    <td><%= to_datetime_th user.disabled_at unless user.enabled? -%></td>
  </tr>
  <% end -%>
</table>

<%= will_paginate @users, :previous_label => '&#8249;', :next_label => '&#8250;' %>
<% if @total_users -%>
  <div style="margin: 6px 0; font-style: italic; color: #333; text-align:center;"><%=@total_users %> <%= @total_users == 1 ? "" : "" %> ผู้ใช้งาน</div>
<% end -%>
