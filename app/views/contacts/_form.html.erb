<dt><label for="contact_first_name">ชื่อ</label></dt>
<dd><%= text_field :contact, :first_name, :class => 'textfield' -%></dd>

<dt><label for="contact_last_name">นามสกุล</label></dt>
<dd><%= text_field :contact, :last_name, :class => 'textfield' -%></dd>

<% if @current_user.admin or @current_user.staff  %>
	<dt><label for="contact_group_id">หน่วยงาน</label></dt>
	<dd>
		<%= select 'contact','group_id',Group.find(:all).collect {|g| [ "(#{g.id})" + g.name, g.id ] }, { :include_blank => true }, :class => "selectbox" -%>
	</dd>
<% else %>
	<dt><label>หน่วยงาน</label></dt>
	<dd><%= Group.find(:first,:conditions => "id = #{@current_user.group_id}").name %></dd>
<% end %>

<dt><label for="contact_email">อีเมล</label></dt>
<dd><%= text_field :contact, :email, :class => 'textfield' -%></dd>

<dt><label for="contact_mobile_phone">โทรศัพท์มือถือ</label></dt>
<dd><%= text_field :contact, :mobile_phone, :class => 'textfield' -%></dd>

<dt><label for="contact_office_phone">โทรภายใน</label></dt>
<dd><%= text_field :contact, :office_phone, :class => 'textfield' -%></dd>

<!--<dt><label for="contact_affiliation">การติดต่อ</label></dt>
<dd><%= text_field :contact, :affiliation, :class => 'textfield' -%></dd>-->

<dt><label for="contact_notes">หมายเหตุ</label></dt>
<dd><%= text_area :contact, :notes, :size => '70x6', :class => 'textarea' -%></dd>
